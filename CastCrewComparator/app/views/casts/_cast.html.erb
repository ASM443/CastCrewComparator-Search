<div id="<%= dom_id cast %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">First person:</strong>
    <%= cast.first_person %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Second person:</strong>
    <%= cast.second_person %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this cast", cast, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this cast', edit_cast_path(cast), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
